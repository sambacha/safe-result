{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "importHelpers": true,
    "downlevelIteration": true,
    "target": "ES2020",
    "module": "esnext",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "types": [
      "node",
      "jest",
    ],
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["src/tests/**/*.ts", "node_modules", "src/**/*.test.ts]
}
