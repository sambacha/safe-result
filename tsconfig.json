{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "importHelpers": true,
    "downlevelIteration": true,
    "target": "es6",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "lib": ["dom", "ES2020"],
    "types": [],
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/.*/",
    "src/**/*.test.ts"
  ]
}
